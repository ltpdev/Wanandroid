<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomCircleProgressBar">
        <attr name="outside_color" format="color"></attr>
        <attr name="outside_radius" format="dimension"></attr>
        <attr name="inside_color" format="color"></attr>
        <attr name="progress_text_color" format="color"></attr>
        <attr name="progress_text_size" format="dimension"></attr>
        <attr name="progress_width" format="dimension"></attr>
        <attr name="max_progress" format="integer"></attr>
        <attr name="progress" format="float"></attr>
        <attr name="direction">
            <enum name="left" value="0"></enum>
            <enum name="top" value="1"></enum>
            <enum name="right" value="2"></enum>
            <enum name="bottom" value="3"></enum>
        </attr>
    </declare-styleable>
</resources>